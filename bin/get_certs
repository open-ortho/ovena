#!/bin/sh
#
# File to go grab certificates from whereever certbot updated them to the proper
# location.
#

SOURCESRV="$<CERTIFICATE_SERVER>"
BASE="/docker/volumes/proxy/letsencrypt/live/npm-1/"
SOURCE="${SOURCESRV}:${BASE}"
DEST="$<OVENA_CONFIG>/nginx-reverse-proxy/"

scp "${SOURCE}cert.pem" "${DEST}" || exit
scp "${SOURCE}privkey.pem" "${DEST}" || exit
docker restart nginx-reverse-proxy