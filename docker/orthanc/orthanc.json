{
  "_version": "0.2.1-dev",
  "Name": "ovena",
  "DicomAet": "ovena",
  "DicomModalities": {
    "CLIENT1": [
      "CLIENT1",
      "192.168.10.10",
      50101
    ]
  },
  "StorageCompression": false,
  "LimitFindResults": 100,
  "LimitFindInstances": 1000,
  "KeepAlive": true,
  "TcpNoDelay": true,
  "StorageAccessOnFind": "Never",
  "TranscodeDicomProtocol": true,
  "DicomAlwaysAllowEcho": true,
  "DicomAlwaysAllowStore": true,
  "RemoteAccessAllowed": true,
  "AuthenticationEnabled": true,
  "RegisteredUsers": {
    "user1": "3V2VC4iBMG3UVHz6",
    "user2": "k3yqCPJhuP9Gkw4B"
  },
  "PostgreSQL": {
    "EnableIndex": true,
    "IndexConnectionsCount": 10,
    "EnableStorage": false,
    "Host": "$<DATABASE_DOCKER_IMAGE>",
    "Database": "$<DATABASE_NAME>",
    "Username": "$<DATABASE_USERNAME>",
    "Password": "postgres"
  },
  "DicomWeb": {
    "Enable": true,            // Whether DICOMweb support is enabled
    "Root": "/dicom-web/",     // Root URI of the DICOMweb API (for QIDO-RS, STOW-RS and WADO-RS)
    "EnableWado": true,        // Whether WADO-URI (previously known as WADO) support is enabled
    "WadoRoot": "/wado",       // Root URI of the WADO-URI (aka. WADO) API
    "Ssl": false,              // Whether HTTPS should be used for subsequent WADO-RS requests
    "QidoCaseSensitive": true, // For QIDO-RS server, whether search is case sensitive (since release 0.5)
    "StudiesMetadata": "Full", // How study-level metadata is retrieved (since release 1.1, cf. section below)
    "SeriesMetadata": "Full"   // How series-level metadata is retrieved (since release 1.1, cf. section below)
  },
  "OrthancExplorer2": {
    "Enable": true,
    "IsDefaultOrthancUI": false,
    "UiOptions" : {
      "EnableStudyList": true,
      "EnableModification": true,
      "MaxStudiesDisplayed": 100,
      "StudyListSearchMode": "search-as-you-type",
      "StudyListSearchAsYouTypeMinChars": 3,
      "StudyListSearchAsYouTypeDelay": 400,
      "StudyListContentIfNoSearch": "most-recents",
      "EnableDicomModalities": true,
      "EnableDownloadZip": true,
      "EnableAnonymization": false,
      "EnableSendTo": false
    }
  }
}